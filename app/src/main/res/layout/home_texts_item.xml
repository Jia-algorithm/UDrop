<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.yudi.udrop.interfaces.OverviewInterface" />

        <variable
            name="model"
            type="com.yudi.udrop.model.data.TextModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginHorizontal="8dp"
        android:onClick="@{(v) -> handler.clickTextItem(model)}">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rectangle_shape"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_home_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <include
                    android:id="@+id/home_text_review"
                    layout="@layout/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_weight="1"
                    bind:model="@{model}" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/home_text_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="113dp"
                        android:src="@drawable/mock_image" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</layout>
