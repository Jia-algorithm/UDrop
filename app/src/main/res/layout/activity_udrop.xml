<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="toolbarModel"
            type="com.yudi.udrop.model.data.ToolbarModel" />

        <variable
            name="toolbarHandler"
            type="com.yudi.udrop.interfaces.ToolbarInterface" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/udrop_background_2"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            bind:handler="@{toolbarHandler}"
            bind:model="@{toolbarModel}" />

        <include layout="@layout/fragment_udrop" />
    </LinearLayout>
</layout>
