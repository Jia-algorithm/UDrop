<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.yudi.udrop.model.data.MessageModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp">

        <TextView
            android:id="@+id/message_time_from_udrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.time}"
            android:visibility="@{model.fromUser ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12:43 05/11/2021" />

        <TextView
            android:id="@+id/message_time_from_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.time}"
            android:visibility="@{model.fromUser? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12:43 05/11/2021" />

        <TextView
            android:id="@+id/message_content_from_udrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_text_rectangle"
            android:padding="10dp"
            android:text="@{model.content}"
            android:textColor="@color/black"
            android:visibility="@{model.fromUser ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/message_time_from_udrop"
            app:layout_constraintTop_toBottomOf="@id/message_time_from_udrop"
            tools:text="(*´▽｀)ノノ你好，我是雨滴~" />

        <TextView
            android:id="@+id/message_content_from_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_text_rectangle"
            android:backgroundTint="@color/black_blue"
            android:padding="10dp"
            android:text="@{model.content}"
            android:textColor="@color/white"
            android:visibility="@{model.fromUser? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/message_time_from_user"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_time_from_user"
            tools:text="(*´▽｀)ノノ你好，我是雨滴~" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
